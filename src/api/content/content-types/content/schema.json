{
  "kind": "collectionType",
  "collectionName": "contents",
  "info": {
    "singularName": "content",
    "pluralName": "contents",
    "displayName": "Content",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "contents"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Movie",
        "Series"
      ],
      "required": true
    },
    "description": {
      "type": "text"
    },
    "ReleaseDate": {
      "displayName": "Release Date",
      "type": "component",
      "repeatable": false,
      "component": "content-release-date.release-date"
    },
    "animated": {
      "type": "boolean",
      "default": false
    }
  }
}
